@{
    ViewData["Title"] = "DetailsOrderPage";
}
@model VerstaTestApp.Models.OrderModel

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input, select {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
    }

    button {
        padding: 10px 15px;
        font-size: 16px;
    }
</style>
<h1>Заказ @Model.OrderCode</h1>

<div class="form-group">
    <label for="senderCity">Город отправителя</label>
    <strong>@Model.SendersСity</strong>
</div>

<div class="form-group">
    <label for="senderAddress">Адрес отправителя</label>
    <strong>@Model.SendersAddress</strong>
</div>

<div class="form-group">
    <label for="recipientCity">Город получателя</label>
    <strong>@Model.ReceiverСity</strong>
</div>

<div class="form-group">
    <label for="recipientAddress">Адрес получателя</label>
    <strong>@Model.ReceiverAddress</strong>
</div>

<div class="form-group">
    <label for="weight">Вес груза (кг)</label>
    <strong>@Model.OrderWeight</strong>
</div>

<div class="form-group">
    <label for="pickupDate">Дата забора груза</label>
    <strong>@Model.OrderPickupDate</strong>
</div>